				<string>// Helpers
function envVar(varName) {
  return $.NSProcessInfo
    .processInfo
    .environment
    .objectForKey(varName).js
}

// Main
const allNotes = Application("Notes").notes()
const ignoredFolders = envVar("ignored_folders").split("\n")

const sfItems = allNotes.flatMap(note =&gt; {
  const name = note.name()
  const folder = note.container().name()
  const id = note.id()
  const contents = note.plaintext().replaceAll("\n", " ")
  const locked = note.passwordProtected()

  if (ignoredFolders.find(folderName =&gt; folderName === folder)) return []

  return {
    uid: name + " " + folder,
    title: locked ? "üîí" + name : name,
    subtitle: folder,
    arg: id,
    match: name + " " + folder + " " + contents
  }
})

// Output JSON
JSON.stringify({ cache: { seconds: 300, loosereload: true }, items: sfItems })</string>
